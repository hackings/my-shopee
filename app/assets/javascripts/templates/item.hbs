{{#if controller.isEditing}}
  {{render "itemEdit"}}
{{else}}
<h2>{{name}}</h2>

<dl class="dl-horizontal">
  {{#if description}}
    <dt>Description:</dt>
    <dd>{{description}}</dd>
  {{/if}}
</dl>

<div class="well well-small">
  <a class="btn btn" {{action startEditing}}>Edit</a>
  <a class="btn btn-danger" {{action destroyRecord}}>Remove</a>
</div>
{{/if}}
