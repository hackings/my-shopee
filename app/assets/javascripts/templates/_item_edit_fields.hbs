<div class="control-group">
  <label class="control-label" for="name">Name</label>
  <div class="controls">
    {{view Ember.TextField valueBinding="name" id="name" placeholder="Name" required="true"}}
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="prise">Prise</label>
  <div class="controls">
    {{view Ember.TextField valueBinding="prise" id="prise" placeholder="0.00"}}
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="notes">Description</label>
  <div class="controls">
    {{view Ember.TextArea valueBinding="description" id="description" placeholder="description"}}
  </div>
</div>
